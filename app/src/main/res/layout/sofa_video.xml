<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mHead_video"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />

        <TextView
            android:id="@+id/mHeader_Title_video"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp_20"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/mTitle_video"
        android:layout_margin="@dimen/dp_20"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/videoplayer_video"
        android:layout_width="match_parent"
        android:layout_height="500dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/zan_img_video"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:background="@mipmap/icon_cell_like">
        </ImageView>

        <TextView
            android:id="@+id/zan_cout_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_10"
            android:text="234"/>


        <ImageView
            android:id="@+id/cai_img_video"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:background="@mipmap/icon_cell_diss">
        </ImageView>

        <TextView
            android:id="@+id/cai_cout_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="踩"/>


        <ImageView
            android:id="@+id/msg_img_video"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:background="@mipmap/icon_cell_comment">
        </ImageView>

        <TextView
            android:id="@+id/msg_cout_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="踩"/>

        <ImageView
            android:id="@+id/share_img_video"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/icon_cell_share">
        </ImageView>

        <TextView
            android:id="@+id/share_cout_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="123"/>
    </LinearLayout>

</LinearLayout>