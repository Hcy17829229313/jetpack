<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".music.MusicActivity">



    <ImageView
        android:id="@+id/music_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_blue"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/music_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@mipmap/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_22"
            android:textColor="@color/common_white"
            android:layout_marginTop="@dimen/dp_5"
            android:text="表一"
           android:layout_marginLeft="@dimen/dp_130"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/music_img"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250" />
    <TextView
        android:id="@+id/music_time_kai"
        android:layout_marginTop="@dimen/dp_600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_white"
        android:text="45.45"
        />

    <SeekBar
        android:layout_marginTop="@dimen/dp_600"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/music_time_zong"
        android:layout_marginTop="@dimen/dp_600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_white"
        android:layout_alignParentRight="true"
        android:text="45.45"
        />


    <ImageView
            android:id="@+id/music_model"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_25"
            android:src="@drawable/model_select"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    <ImageView
        android:id="@+id/music_pre"
        android:src="@mipmap/icon_lrc_pre"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/music_Pause"
        android:src="@drawable/start_select"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_165"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/music_next"
        android:src="@mipmap/icon_lrc_next"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_250"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/music_timer"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_300"
        android:src="@drawable/icon_lrc_timer"
        android:layout_width="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_height="@dimen/dp_50" />
    </RelativeLayout>