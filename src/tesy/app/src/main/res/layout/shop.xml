<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Vertical.Common">
    <com.youth.banner.Banner
        android:id="@+id/mBanner"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/mGoodsDescTv"
        style="@style/MatchWrap"
        android:textColor="@color/text_normal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/border_top"/>
    <TextView
        android:id="@+id/mGoodsPriceTv"
        style="@style/MatchWrap"
        android:padding="10dp"
        android:textColor="@color/common_red"
        android:textSize="16sp"
        android:background="@drawable/border_bottom"/>
    <RelativeLayout
        android:id="@+id/mSkuView"
        style="@style/MatchWrap"
        android:background="@drawable/border_all"
        android:layout_marginTop="15dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/mSkuLabelTv"
            style="@style/WrapWrap"
            android:textSize="12dp"
            android:textColor="@color/text_dark"
            android:text="已选"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/mSkuSelectedTv"
            style="@style/WrapWrap"
            android:textColor="@color/text_light_dark"
            android:text="8961蓝色，L,1件"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mSkuLabelTv"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/mMoreIv"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/mMoreIv"
            style="@style/WrapWrap"
            android:src="@mipmap/icon_gray_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
