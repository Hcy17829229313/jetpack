<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".egui.BabyLisActivity">

    <ImageView
        android:id="@+id/mohu_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/dp_150"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@mipmap/icon_back" />

        <TextView
            android:id="@+id/title_mohu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="asdfghj"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dp_20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_toRightOf="@id/Image_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mohu_titc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="sadfghn"
            android:textColor="@color/common_white" />

        <TextView
            android:id="@+id/mohu_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="asDFGH"
            android:textColor="@color/common_white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_150"
            app:cardCornerRadius="@dimen/dp_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@mipmap/btn_play_all" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/Image_head"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/black_background"
        android:scaleType="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Ba_Li_rlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/re"
        android:background="@color/common_white">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>