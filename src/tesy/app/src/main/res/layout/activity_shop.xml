<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Common">

<RelativeLayout
        android:id="@+id/mHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/finsh"
            android:background="@color/common_blue"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/shops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/icon_back"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mTabLayout"
        style="@style/TabsStyle"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true" />


    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@id/mHeaderBar" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/mShareTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/collect_selector"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="@drawable/bottom_nav_text_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mEnterCartTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/bottom_nav_cart_selector"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/bottom_nav_text_selector"
            android:textSize="12sp" />

        <Button
            android:id="@+id/mAddCartBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/common_red"
            android:text="加入购物车"
            android:textColor="@color/common_white"
            android:textSize="16sp" />
    </LinearLayout>


